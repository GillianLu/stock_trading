<div id="portfolio-container">
  <h1>My Portfolio</h1>

  <div id="portfolio-table-container">
    <% if @stocks.present? %>
      <table class="styled-table">
        <thead>
          <tr>
            <th>Symbol</th>
            <th>Company Name</th>
            <th>Latest Price</th>
            <th>Shares</th>
            <th>Actions</th> 
          </tr>
        </thead>
        <tbody>
          <% @stocks.each do |stock| %>
            <tr>
              <td><%= stock[:symbol] %></td>
              <td><%= stock[:name] %></td>
              <td><%= stock[:latest_price] %></td>
              <td><%= stock[:shares] %></td>
              <td><%= link_to 'Show', stock_path(stock[:symbol]), class: 'btn btn-info' %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <% if @no_stocks_message.present? %>
        <p><%= @no_stocks_message %></p>
      <% end %>
      
    <% end %>
  </div>
  
</div>

<div id="stocks-container">
  <% if @stocks_for_trading.present? %>
    <h2>Stocks Available for Trading</h2>
    <table class="styled-table">
      <thead>
        <tr>
          <th>Symbol</th>
          <th>Company Name</th>
          <th>Latest Price</th>
          <th>Price 24h Ago</th>
          <th>Actions</th> 
        </tr>
      </thead>
      <tbody>
        <% @stocks_for_trading.each do |stock| %>
          <tr>
            <td><%= stock[:symbol] %></td>
            <td><%= stock[:name] %></td>
            <td><%= stock[:latest_price] %></td>
            <td><%= stock[:price_24h_ago] %></td> 
            <td><%= link_to 'Show', stock_path(stock[:symbol]), class: 'btn btn-info' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div>
      <%= link_to 'Previous', stocks_path(page: params[:page].to_i - 1) unless params[:page].to_i <= 1 %>
      <%= link_to 'Next', stocks_path(page: params[:page].to_i + 1) %>
    </div>
  <% end %>
</div>
  

