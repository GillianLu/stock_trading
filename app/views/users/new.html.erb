<div id='new-user-form-container'>
  <h1>New User</h1>

  <%= form_with(model: @user, url: users_path, local: true) do |form| %>
    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>
    </div>

    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name %>
    </div>

    <div class="field">
      <%= form.label :address %>
      <%= form.text_field :address %>
    </div>

    <div class="field">
      <%= form.label :balance %>
      <%= form.number_field :balance, step: 0.01 %>
    </div>

    <div class="field">
      <%= form.label :role %>
      <%= form.select :role, User.roles.except(:user).keys %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>