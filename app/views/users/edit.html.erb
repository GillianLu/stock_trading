<div id='user-edit-form-container'>
    <h1>Edit User Information </h1>
    <%= form_with(model: @user, url: user_path(@user), method: :put) do |form| %>
        <div class='field'>
            <%= form.label :first_name %>
            <%= form.text_field :first_name %>
        </div>
    
        <div class='field'>
            <%= form.label :last_name %>
            <%= form.text_field :last_name %>
        </div>
    
        <div class='field'>
            <%= form.label :address %>
            <%= form.text_field :address %>
        </div>
        
        <div class='field'>
            <%= form.label :balance %>
            <%= form.text_field :balance %>
        </div>

        <% if current_user.admin? %>
            <div class='field'>
                <%= form.label :role %>
                <%= form.select :role, User.roles.keys %>
            </div>
        <% end %>
    
        <%= form.submit "UPDATE" %>
    <% end %>
</div>